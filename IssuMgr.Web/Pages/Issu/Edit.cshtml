@page
@model IssuMgr.Web.Pages.Issu.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Editat Issue</h1>
<hr />
<partial name="Shared/_MsgErr" />

<div class="container">
    <form method="post">
        <div class="row">
            <div class="col">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Issu.Tit"></label>
                    <input asp-for="Issu.Tit" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Issu.Txt"></label>
                    <textarea asp-for="Issu.Txt" class="form-control" cols="40" rows="5"></textarea>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="LstLbl"></label>
                    <select name="Issu.LstLbl" id="Issu_LstLbl" multiple class="form-control">
                        @foreach(var lbl in Model.LstLbl) {
                            bool lxEsSel = Model.LstLbl.Contains(lbl);
                            if(lxEsSel) {
                                <option value="@lbl.LblId" data-clr="@lbl.Clr" data-bkclr="@lbl.BkClr" selected>@lbl.Lbl</option>
                            } else {
                                <option value="@lbl.LblId" data-clr="@lbl.Clr" data-bkclr="@lbl.BkClr">@lbl.Lbl</option>
                            }
                        }
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </div>
        <div id="LblInputs"></div>
    </form>
</div>


<div>
    <a asp-page="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/js/Issu.js" type="text/javascript"></script>
}
