@page
@model IssuMgr.Web.Pages.Issu.DetailsModel
@{
    ViewData["Title"] = "Issue Details";
}
<h1>@ViewData["Title"]</h1>

<a asp-page="./Create" class="btn btn-primary">Nuevo</a>
<br />
<hr />
<partial name="Shared/_MsgErr" />

@if(Model.Issu != null) {
    <div class="card">
        <div class="card-header">
            <p class="card-title m-1 p-1">
                <b>@Model.Issu.Tit</b>&nbsp;
                @if(Model.Issu.LstLbl != null) {
                    @foreach(var lxLbl in Model.Issu.LstLbl) {
                        <span class="lbl" style="color: #@lxLbl.Clr; background-color: #@lxLbl.BkClr"><small>@lxLbl.Lbl</small></span>
                    }
                }
            </p>
        </div>
        <p class="card-text m-1 p-1">
            @Model.Issu.Txt
        </p>
        <div class="card-footer p-1">
            <div class="row">

                <div class="col">
                    <small>#@Model.Issu.IssuId</small>
                </div>
                <div class="col">
                    <small>Creada: @Model.Issu.StmCre.ToString("dd/MM/yyyy hh:mm tt")</small>
                </div>
                <div class="col">
                    <small>Modificada: @Model.Issu.StmMdf.ToString("dd/MM/yyyy hh:mm tt")</small>
                </div>
                <div class="col">
                    <div class="text-right">
                        <a asp-page="./Edit" asp-route-id="@Model.Issu.IssuId">Edit</a> |
                        <a asp-page="./Delete" asp-route-id="@Model.Issu.IssuId">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

} else {
    <p>No hay Issues</p>
}
<hr />